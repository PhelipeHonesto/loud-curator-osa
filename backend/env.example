# Loud Curator Environment Configuration
# Copy this file to .env and fill in your actual values

# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Optional API Keys (for additional news sources)
NEWSDATA_API_KEY=your_newsdata_api_key_here
GROUNDNEWS_API_KEY=your_groundnews_api_key_here
SLACK_WEBHOOK_FIGMA_URL=https://hooks.slack.com/services/YOUR/FIGMA/WEBHOOK

# Security (Change this in production!)
SECRET_KEY=your_secure_secret_key_here

# Database (SQLite by default)
DATABASE_URL=sqlite:///./news.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# CORS (Add your frontend URLs)
ALLOWED_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Rate Limiting (Optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600 